<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <filter-name>methodsFilter</filter-name>
    <filter-class>de.ba.bub.studisu.common.filter.HttpMethodsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>methodsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- von apollo-kusos -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>de.ba.bub.studisu.StudisuApplication</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.boot.legacy.context.web.SpringBootContextLoaderListener</listener-class>
  </listener>

  <!-- filter ausgelassen, wie zb bei apollo-kusos -->

  <servlet>
    <servlet-name>spring</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

    <!-- von apollo-kusos -->
    <init-param>
      <param-name>contextAttribute</param-name>
      <param-value>org.springframework.web.context.WebApplicationContext.ROOT</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- could add a second instance for monitoring -->

  <!-- HTTP-Methoden-Whitelist. 
       STUDISU-179: HTTP-Methoden absichern. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>ALLOW_HTTP_METHODS</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>OPTIONS</http-method>
    </web-resource-collection>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>DENY_UNUSED_HTTP_METHODS</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>
</web-app>